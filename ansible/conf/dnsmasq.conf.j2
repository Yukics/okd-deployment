# enable logs if required
log-queries
log-dhcp

# disable DNS server
port=0

# listen on PXEBOOT vlan (vlan110) only
interface=eth0

# enable built-in tftp server
enable-tftp
tftp-root=/tftpboot

# DHCP range 10.0.0.200 ~ 10.0.0.250
dhcp-range=192.168.69.50,192.168.69.150,255.255.255.0,24h
#dhcp-range=192.168.69.0,proxy

# Default gateway
dhcp-option=3,192.168.69.1

# Domain name - homelab.net
dhcp-option=15,yuki.es

# Broadcast address
dhcp-option=28,192.168.69.255

# Set interface MTU to 9000 bytes (jumbo frame)
# Enable only when your network supports it
# dhcp-option=26,9000

# Tag dhcp request from iPXE
dhcp-match=set:ipxe,175

# inspect the vendor class string and tag BIOS client
dhcp-vendorclass=BIOS,PXEClient:Arch:00000

# 1st boot file - Legacy BIOS client
dhcp-boot=tag:!ipxe,tag:BIOS,undionly.kpxe,192.168.69.1

# 1st boot file - EFI client
# at the moment all non-BIOS clients are considered
# EFI client
dhcp-boot=tag:!ipxe,tag:!BIOS,ipxe-x86_64.efi,192.168.69.1

# 2nd boot file
dhcp-boot=tag:ipxe,menu/boot.ipxe